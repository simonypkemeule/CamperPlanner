@model CamperPlanner.Models.Voertuigen

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Voertuigen</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VoertuigID" />
            <div class="form-group">
                <label asp-for="Kenteken" class="control-label"></label>
                <input asp-for="Kenteken" class="form-control" />
                <span asp-validation-for="Kenteken" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select class="form-select form-select form-select-md form-control" aria-label="Default select example">
                    <option value="Camper">Camper</option>
                    <option value="Caravan">Caravan</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Lengte" class="control-label"></label>
                <input asp-for="Lengte" class="form-control" />
                <span asp-validation-for="Lengte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Merk" class="control-label"></label>
                <input asp-for="Merk" class="form-control" />
                <span asp-validation-for="Merk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stroomaansluiting"></label>
                <select class="form-select form-select-md form-control" asp-for="Stroomaansluiting">
                    <option disabled selected hidden>Selecteer Ja of Nee</option>
                    <option value="Ja">Ja</option>
                    <option value="Nee">Nee</option>
                </select>
                <span asp-validation-for="Stroomaansluiting" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-route-userId="@ViewBag.userId" type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
